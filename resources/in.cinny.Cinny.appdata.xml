    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/cinnyapp/cinny-desktop/main/resources/screenshot2.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/cinnyapp/cinny-desktop/main/resources/screenshot3.png</image>
